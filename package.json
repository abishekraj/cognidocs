{
  "name": "cognidocs",
  "version": "0.0.10",
  "description": "Beautiful documentation for TypeScript & React projects â€” automatically generated from your code",
  "keywords": [
    "documentation",
    "typescript",
    "react",
    "nextjs",
    "vue",
    "documentation-generator",
    "api-documentation",
    "code-analysis",
    "ast-parser",
    "component-documentation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cognidocs.git",
    "directory": "/"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cognidocs/issues"
  },
  "homepage": "https://github.com/yourusername/cognidocs#readme",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:manifest": "vitest run tests/manifest.test.ts --config tests/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm run test && pnpm run test:manifest",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "phase1": "turbo run dev --filter=@cognidocs/cli --filter=@cognidocs/parser --filter=@cognidocs/testing",
    "phase2": "turbo run dev --filter=@cognidocs/analyzer --filter=@cognidocs/coverage",
    "phase3": "turbo run build --filter=./packages/* && cd examples/sample-react && cognidocs build",
    "phase3-ui": "turbo run build --filter=@cognidocs/site-builder && cd examples/sample-react && cognidocs serve",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "fs-extra": "^11.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
